<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/layout_pic"
        android:layout_width="60dp"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/icon_heart_word"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/heart_word_icon"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="你好啊你好啊你好啊你好啊你好啊你好啊你好啊你好啊"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textSize="12sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/color_4d4d4d"
            android:visibility="gone"
            tools:visibility="visible"/>
    </FrameLayout>

    <TextView
        android:id="@+id/textview_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/layout_pic"
        android:layout_alignTop="@+id/layout_pic"
        android:layout_alignBottom="@+id/layout_pic"
        android:layout_marginStart="10dp"
        android:lineSpacingExtra="4sp"
        android:textColor="#666978"
        android:textSize="14sp"
        tools:text="我的天空是否需要一个真命天子般的你存在呢你是不错的选择。我的天空是否需要一个真命天子般的你存在呢你是不错的选择。我的天空是否需要一个真命天子般的你存在呢你是不错的选择。我的天空是否需要一个真命天子般的你存在呢你是不错的选择"/>

    <TextView
        android:id="@+id/textview_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_pic"
        android:textColor="#666978"
        android:lineSpacingExtra="4sp"
        android:textSize="14sp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="我的天空是否需要一个真命天子般的你存在呢你是不错的选择。在呢你是不错的选择。"/>

</RelativeLayout>