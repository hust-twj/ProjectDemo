<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_load_original"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载原图"
        android:background="@drawable/bg_moment_hot_topic_publish"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:onClick="go2Original"/>

    <TextView
        android:id="@+id/tv_in_sample_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载大图 采样(inSampleSize)"
        android:background="@drawable/bg_moment_hot_topic_publish"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/tv_load_original"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:onClick="go2SampleSize"/>

</RelativeLayout>